    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_assignment",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "flutter_assignment (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_assignment (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "Flutter Prod",
            "program": "lib/main_prod.dart",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "prod",
                "build",
                "apk"
            ]
        },
        {
            "name": "Flutter Dev",
            "program": "lib/main_dev.dart",
            "request": "launch",
            "type": "dart",
            "args": [
                "--flavor",
                "dev",
                "build",
                "apk"
            ]
        }
    ]
}